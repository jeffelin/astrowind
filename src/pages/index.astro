---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Artemis — AI-Powered Development Platform',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <div class="min-h-screen flex items-center justify-center relative">
    <!-- Decorative cursor line -->
    <svg class="absolute bottom-0 left-0 w-full h-full pointer-events-none" style="z-index: 1;">
      <path 
        d="M 20 1000 Q 200 800 400 700 T 800 600" 
        stroke="#000000" 
        stroke-width="3" 
        fill="none" 
        stroke-dasharray="8,8"
        class="animate-draw"
      />
      <!-- Cursor/kite shape at the end -->
      <path 
        d="M 900 600 L 820 580 L 840 600 L 820 620 Z" 
        fill="#000000" 
        class="animate-pulse"
      />
    </svg>

    <Hero
      actions={[
        {
          variant: 'primary',
          text: 'Hey Artemis!',
          href: 'https://calendly.com/kjefflin/30min',
          class: 'text-4xl px-13 py-6 mt-40 ml-40'
        },
        // { 
        //   text: 'How it Works', 
        //   href: '#features',
        //   class: 'text-4xl mt-64'
        // },
      ]}
    >
      <Fragment slot="title">
        <div class="flex items-baseline mt-20 justify-center whitespace-nowrap">
          <span class="font-bold text-gray-800 text-7xl sm:text-8xl -mt-36">Automate</span> 
          <span class="text-gray-300 text-7xl sm:text-8xl ml-6 -mt-32">your emails</span>
          <!-- Email Icon -->
          <div class="w-12 h-12 ml-4 -mt-32">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-full h-full text-gray-300">
              <rect width="20" height="16" x="2" y="4" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
          </div>
        </div>
      </Fragment>

      <Fragment slot="subtitle">
        <span class="hidden sm:inline">
          <span class="font-semibold text-lg sm:text-xl mt-18 block text-gray-600 whitespace-nowrap text-center">The first end-to-end conversational AI agent that writes and sends personalized messages.</span>
        </span>
        <!-- <span class="block mb-1 sm:hidden font-bold text-orange-600">Artemis: Messaging Automation Made Easy</span> -->
      </Fragment>

      <Fragment slot="content">
        <div class="flex justify-center items-center gap-10 mt-20">
          <!-- Voice Icon -->
          <div class="w-16 h-16">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-full h-full text-gray-800">
              <path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"/>
              <path d="M19 10v2a7 7 0 0 1-14 0v-2"/>
              <line x1="12" y1="19" x2="12" y2="22"/>
            </svg>
          </div>
        </div>
      </Fragment>
    </Hero>
  </div>

  <!-- Copyright Notice -->
  <div class="text-center text-gray-500 text-lg py-2">
    Copyright © {new Date().getFullYear()} Artemis. All rights reserved.
  </div>
</Layout>

<style>
  @keyframes draw {
    from {
      stroke-dashoffset: 1000;
    }
    to {
      stroke-dashoffset: 0;
    }
  }
  .animate-draw {
    animation: draw 2s ease-in-out forwards;
  }
</style>
